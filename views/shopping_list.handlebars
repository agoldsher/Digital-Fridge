<link rel="stylesheet" type="text/css" media="screen" href="/styles/shopping.css">
<link rel="stylesheet" type="text/css" media="screen" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="/js/shopping.js"></script>
<div class="navbar bg-black w-100">
    <a class="navbar-brand font-weight-bold text-white">Digital Fridge</a>
    <ul class="navbar-nav">
        <li class="nav-item">
            <button type="button" id="goToInventory" class="btn btn-primary mr-2"><i class="fa fa-list mr-2"></i>Go to Inventory</button>
        </li>
        <li class="nav-item">
            <button type="button" id="logOutBtn" class="btn btn-danger"><i class="fa fa-sign-out mr-2"></i>Log Out</button>
        </li>
    </ul>
</div>
<div class="container">
    <h1 class="text-white mt-5 mb-0">Shopping List for {{ingredients.[0].User.dataValues.username}}</h1>
    <p class="text-white">Here are the ingredients listed for the user selected. Please use for the form below, if more need to be added.</p>
    <br>
    <table id="ingredientTable" class="table table-bordered table-responsive-xs bg-white">
        <thead class="bg-light">
            <th scope="col" style="text-align: center; width: 1em;"><i class="fa fa-check"></i></th>
            <th scope="col" style="text-align: center; width: 1em;">ID</th>
            <th scope="col" style="text-align: center;">Item Name</th>
            <th scope="col" style="text-align: center; width: 20%;">Quantity Needed</th>
            <th scope="col" style="text-align: center; width: 1em;"><i class="fa fa-times"></i></th>
        </thead>
        <tbody>
            {{#each ingredients}}
            <tr data-id="{{this.id}}">
                <td scope="row" style="text-align: center;"><input type="checkbox" aria-label="Checkbox for Inventory Item" class="shoppingCheck"></td>
                <td scope="row">{{this.id}}</td>
                <td scope="row" class="item-name">{{this.name}}</td>
                <td scope="row">{{this.quantityNeeded}}</td>
                <td scope="row" class="text-align: center;"><button type="button" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>