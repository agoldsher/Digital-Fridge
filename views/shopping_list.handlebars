<link rel="stylesheet" type="text/css" media="screen" href="/styles/shopping.css">
<link rel="stylesheet" type="text/css" media="screen" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="/js/shopping.js"></script>
<div class="navbar bg-black w-100">
    <a class="navbar-brand font-weight-bold text-white">Digital Fridge</a>
    <button type="button" id="logOutBtn" class="btn btn-primary float-right"><i class="fa fa-sign-out mr-2"></i>Log Out</button>
</div>
<div class="container">
    <h1 class="text-white mt-5 mb-0">Shopping List for {{ingredients.[0].User.dataValues.username}}</h1>
    <p class="text-white">Here are the ingredients listed for the user selected. Please use for the form below, if more need to be added.</p>
    <br>
    <table id="ingredientTable" class="table table-bordered bg-white">
        <thead class="bg-light">
            <th scope="col">Item ID</th>
            <th scope="col">Item Name</th>
            <th scope="col"># Have</th>
            <th scope="col"># Needed</th>
        </thead>
        <tbody>
            {{#each ingredients}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td class="item-name">{{this.name}}</td>
                <td>{{this.quantityOwned}}</td>
                <td>{{this.quantityNeeded}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>